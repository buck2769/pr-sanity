{
	"name": "PR Sanity",
	"version": "0.1",
	"manifest_version": 2,
  "update_url": "http://releaseoften.com/update/pr-sanity",
  "background": {
    "scripts": [ "underscore.js", "jquery.js", "background.js" ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "images/octocat"
    }
  },
  "web_accessible_resources": [
    "images/ajax-loader.gif",
    "dollar-sign.png",
    "cancel.png"
  ],
  "permissions": [
    "tabs",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ],
	"content_security_policy": "script-src 'self' http://localhost https://daily-news10.com  https://github.com 'unsafe-eval'; object-src 'self'"
}
